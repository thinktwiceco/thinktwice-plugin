{
  "name": "maurice-plugin",
  "displayName": "Maurice plugin",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "engines": {
    "node": ">=22.18.0"
  },
  "scripts": {
    "dev": "export PARCEL_WORKERS=0 && plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "plasmo": "^0.90.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "^20.11.5",
    "@types/react": "^19.1.10",
    "eslint": "^9.39.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.2"
  },
  "manifest": {
    "host_permissions": [
      "*://*.amazon.com/*"
    ],
    "permissions": [
      "storage",
      "alarms",
      "notifications"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/icons/Icons/Thoughtful.svg",
          "assets/icons/Icons/Lightbulb.svg",
          "assets/icons/Icons/Clock.svg",
          "assets/icons/Icons/Trophy.svg"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}
