{
  "name": "maurice-plugin",
  "displayName": "Maurice plugin",
  "version": "0.0.4",
  "description": "Reminds you to think twice before buying!",
  "author": "Thinktwiceco",
  "scripts": {
    "dev": "export PARCEL_WORKERS=0 && plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "version:validate": "bash scripts/validate-tag.sh",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "plasmo": "^0.90.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@playwright/test": "^1.58.0",
    "@types/chrome": "0.0.258",
    "@types/node": "^20.19.30",
    "@types/react": "^19.1.10",
    "eslint": "^9.39.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.2"
  },
  "manifest": {
    "host_permissions": [
      "*://*.amazon.com/*"
    ],
    "permissions": [
      "storage",
      "alarms",
      "notifications",
      "tabs"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/icons/Icons/Thoughtful.svg",
          "assets/icons/Icons/Lightbulb.svg",
          "assets/icons/Icons/Clock.svg",
          "assets/icons/Icons/Trophy.svg",
          "assets/icons/Icons/Trophy.png",
          "assets/icons/Icons/TrophyOutline.png"
        ],
        "matches": [
          "<all_urls>"
        ]
      }
    ]
  }
}